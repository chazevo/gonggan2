<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="moviemapper">
	<resultMap type="movie" id="movieResult">
	
	<id property="movie_num" column="movie_num"/>
	<result property="post_id" column="post_id"/>
	<result property="movie_info" column="movie_info"/>
	<result property="title" column="title"/>
	<result property="link" column="link"/>
	<result property="image" column="image"/>
	<result property="subtitle" column="subtitle"/>
	<result property="pubDate" column="pubDate"/>
	<result property="director" column="director"/>
	<result property="actor" column="actor"/>

	</resultMap>
	<select id="movielist_index2" parameterType="List" resultMap="movieResult">
	SELECT * FROM ( SELECT ROWNUM AS RNUM, POST_ID, SUBTITLE FROM (SELECT * FROM MOVIE ORDER BY POST_ID DESC)  )<![CDATA[ WHERE RNUM<=8]]>
	</select>
</mapper>